<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/updateNoteLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UpdateNoteActivity"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/scrollView"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:padding="16sp"
    >


        <com.google.android.material.button.MaterialButton
                android:id="@+id/backBtn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:iconSize="22sp"
                app:icon="@drawable/ic_back_arrow"
                app:iconTint="?attr/iconTint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/back_button"
        />



        <com.google.android.material.button.MaterialButton
                android:id="@+id/saveBtn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_height="40sp"
                android:layout_width="40sp"
                app:iconSize="30sp"
                app:icon="@drawable/ic_save"
                app:iconTint="?attr/iconTint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="6dp"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_layout"
            app:layout_constraintTop_toBottomOf="@+id/top_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <EditText
                    android:id="@+id/txtNoteTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/note_title"
                    android:background="@color/transparent"
                    android:padding="8dp"
                    android:inputType="text|textMultiLine"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:theme="@style/TextColor"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/txtNoteDescription"
                    android:importantForAutofill="no"
                    android:layout_margin="10sp"
            />

            <EditText
                    android:id="@+id/txtNoteDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:hint="Take a Note"
                    android:padding="8dp"
                    android:background="@color/transparent"
                    android:minLines="1"
                    android:theme="@style/TextColor"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:inputType="text|textMultiLine"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtNoteTitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:autofillHints=""
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/transparent"
    >
        <com.google.android.material.button.MaterialButton
                android:id="@+id/colorBtn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="55sp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10sp"
                android:layout_gravity="center_vertical|center_horizontal"
                app:icon="@drawable/ic_color_picker"
                app:iconSize="40sp"
                app:iconTint="?attr/iconTint"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:id="@+id/lastEdited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:padding="7sp"
                android:theme="@style/TextColor"
                android:textSize="18sp"
                android:text="Edited Oct 25"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/colorBtn"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
