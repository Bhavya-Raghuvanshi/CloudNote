<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CloudNote" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemIconSize">20dp</item>
        <item name="background">@color/grey</item>
        <item name="shapeAppearance">@color/black</item>

        <item name="colorNavigationItem">@color/orange</item>
        <item name="colorNavigationItemSelected">@color/sky</item>
    </style>

    <style name="Widget.Custom.Toolbar" parent="android:Widget.Material.Toolbar">
        <item name="android:textColor">@color/black</item>
        <item name="itemIconTint">#232428</item>
        <item name="itemIconSize">20dp</item>
        <item name="background">@color/colorControlActivated</item>
    </style>

    <style name="CustomNavView">
        <item name="android:textColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemIconSize">20dp</item>
        <item name="background">@color/colorControlActivated</item>
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemTextColor">@color/black</item>
        <item name="itemIconSize">18dp</item>
    </style>

    <style name="RoundedButtonShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- This value will make the button fully rounded -->
    </style>

    <style name="DrawerItemTextAppearance">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ImageView.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/grey_3</item>
    </style>
    <style name="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemBackground">@color/grey</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/grey_3</item>
        <item name="itemTextAppearanceInactive">@color/grey</item>
        <item name="itemTextAppearanceActive">@color/grey_3</item>
        <item name="itemTextColor">@color/grey_3</item>
    </style>
</resources>